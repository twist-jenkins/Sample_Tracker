div(class="twst-hamilton-step")      
    div(class="twst-hamilton-step-direction")
        div(class="twst-bullet-number") 5
        div(class="twst-hamilton-step-direction-text")
            div(class="twst-hamilton-step-stats")
                p(class="twst-hamilton-source-plates-remaining" ng-if="confirmedDestinationCount < destinationPlatesNeedingScanCount") {{destinationPlatesNeedingScanCount - confirmedDestinationCount}} remaining
                button(class="twst-button twst-red-button twst-source-plates-start-over-button" ng-click="restartConfirmation()") restart confirmation
            div(class="twst-hamilton-step-direction-heading") CONFIRM DESTINATION PLACEMENT:
                div(class="twst-spinner" ng-if="savingSourcesAndDestinations")
            strong(class="twst-hamilton-step-direction-main" ng-bind-html="currentStepInstruction")
            button(class="twst-button twst-blue-button twst-hamilton-source-scan-complete-button" ng-if="confirmedDestinationCount == destinationPlatesNeedingScanCount" ng-click="confirmationComplete()") Confirmation Complete
            input(class="twst-hamilton-placement-confirmation-input twst-offscreen twst-hamilton-barcode-input" type="text" ng-model="placementConfirmation.value" ng-change="placementConfirmationScanned()" ng-keydown="ignoreTab($event)")