div(class="twst-hamilton-step")      
    div(class="twst-hamilton-step-direction")
        div(class="twst-bullet-number") 3
        div(class="twst-hamilton-step-direction-text")
            div(class="twst-hamilton-step-stats")
                p(class="twst-hamilton-source-plates-remaining" ng-if="scannedSourcePlateCount < hamiltonDataObj.allSourcePlates.length") {{hamiltonDataObj.allSourcePlates.length - scannedSourcePlateCount}} remaining
                button(class="twst-button twst-red-button twst-source-plates-start-over-button" ng-click="restartSourcePlateScan()") restart plate scan
            div(class="twst-hamilton-step-direction-heading") SCAN SOURCES:
                div(class="twst-spinner" ng-if="confirmingPlate || processingSources")
            strong(class="twst-hamilton-step-direction-main" ng-bind-html="currentStepInstruction")
            button(class="twst-button twst-blue-button twst-hamilton-source-scan-complete-button" ng-class="{'twst-disabled-button':!scannedSourcePlateCount}" ng-click="sourcePlateScanComplete()") Source Scan Complete