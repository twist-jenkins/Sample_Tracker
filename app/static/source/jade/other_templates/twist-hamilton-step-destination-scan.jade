div(class="twst-hamilton-step")      
    div(class="twst-hamilton-step-direction")
        div(class="twst-bullet-number") 4
        div(class="twst-hamilton-step-direction-text")
            div(class="twst-hamilton-step-stats")
                p(class="twst-hamilton-source-plates-remaining" ng-ig="scannedDestinationPlateCount < hamiltonDataObj.allDestinationPlates.length") {{hamiltonDataObj.allDestinationPlates.length - scannedDestinationPlateCount}} remaining
                button(class="twst-button twst-red-button twst-source-plates-start-over-button" ng-click="restartDestinationPlateScan()") restart plate scan
            span(class="twst-hamilton-step-direction-heading") SCAN DESTINATIONS:
            strong(class="twst-hamilton-step-direction-main" ng-bind-html="currentStepInstruction")
            button(class="twst-button twst-blue-button twst-hamilton-source-scan-complete-button" ng-class="{'twst-disabled-button':scannedDestinationPlateCount != hamiltonDataObj.allDestinationPlates.length}" ng-click="destinationPlateScanComplete()") Destination Scan Complete