div(class="twst-sample-track-main twst-child-page")
    a(class="twst-sample-track-main-download-link" ng-href="static/sampleTransferSpreadsheet.xlsx") Download blank transfer template
    h1 Record Step
    div(class="twst-spinner" ng-if="!stepTypeOptions")
    form(class="twst-sample-track-main-inputs" ng-show="stepTypeOptions")
        div(class="twst-sample-track-result-message")
            twst-message(message="submissionResultMessage" visible-and-valid="submissionResultVisible")
        p(class="twst-input-label-block") Step Type:
        div(class="btn-group twst-sample-track-step-options-select" dropdown)
            twst-thumb-validation-icon(validation="transferPlan.typeDetails" errors-invisible="true")
            button(id="single-button" type="button" class="btn btn-primary" dropdown-toggle) {{stepTypeDropdownValue}}&nbsp;
                span(class="caret")
            ul(class="dropdown-menu" role="menu" aria-labelledby="single-button")
                li(role="menuitem" ng-repeat="option in stepTypeOptions")
                    a(ng-click="selectStepType(option)") {{option.text}}
        div(class="twst-sample-track-transfer-toggle-controls" ng-if="transferPlan.typeDetails")
            div(class="twst-tab twst-sample-track-main-tab" ng-click="selectTransferTemplateType(standard_template)" ng-class="{'twst-active-tab': templateTypeSelection == standard_template}")
                div(class="twst-custom-radio twst-selected-{{templateTypeSelection == standard_template}}" val="standard")
                span(class="twst-custom-radio-label") Use standard template
            div(class="twst-tab twst-sample-track-main-tab" ng-click="selectTransferTemplateType(excel_template)" ng-class="{'twst-active-tab': templateTypeSelection == excel_template}")
                div(class="twst-custom-radio twst-selected-{{templateTypeSelection == excel_template}} twst-upload-via-excel-radio" val="excel")
                span(class="twst-custom-radio-label") Upload Transfer File
        div(class="twst-tab-body" ui-view ng-if="stepTypeOptions && templateTypeSelection")
            

